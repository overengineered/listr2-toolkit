{
  "compilerOptions": {
    "noEmit": false,
    "strict": true,
    "lib": ["ES2021"],
    "target": "ES2021",
    "module": "Node16",
    "declaration": true,
    "declarationMap": true,
    "rootDir": "src",
    "outDir": "./dist",
    "inlineSources": true,
    "sourceMap": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "esModuleInterop": true
  },
  "include": ["src/"]
}
